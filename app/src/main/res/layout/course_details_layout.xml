<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/continueCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/dde_btn_clr"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Continue Course"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/spacing_mlarge"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:elevation="10dp"
    app:cardElevation="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="Price"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_money_icon"
                app:drawableTint="@color/grey_60" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:text="â‚¹3999"
                android:textColor="@color/dde_btn_clr"
                android:textSize="27sp" />

        </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:drawableLeft="@drawable/ic_chalkboard_user_solid"
                android:drawablePadding="5dp"
                android:drawableTint="@color/grey_60"
                android:text="Instructor"

                android:textSize="18sp" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp" />

      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_clock_solid1"
                android:drawableTint="@color/grey_60"

                android:drawablePadding="5dp"
                android:text="Validity"
                android:textSize="18sp" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 days"
                android:textSize="20sp" />

      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_file_solid"
                android:drawablePadding="5dp"
                android:drawableTint="@color/grey_60"
                android:text="Modules"
                android:textSize="18sp" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="450+"
                android:textSize="20sp" />

      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawablePadding="5dp"
                android:text="MCQ"

                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_circle_question_solid"
                app:drawableTint="@color/grey_60" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000+"
                android:textSize="20sp" />

      </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/fundamental_question"
                android:drawablePadding="5dp"

                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_circle_question_solid"
                app:drawableTint="@color/grey_60" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />
      </LinearLayout>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawablePadding="5dp"
                android:text="Mock Test"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_square_check_regular_back"
                app:drawableTint="@color/grey_60" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />

          </LinearLayout>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawablePadding="5dp"

                android:text="Download Attachment"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_download_solid"
                app:drawableTint="@color/grey_60" />

          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />

          </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawablePadding="5dp"
                android:text="Progress Chart"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_chart_line_solid"
                app:drawableTint="@color/grey_60" />


          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle_check_solid"
                android:drawableTint="@color/dde_btn_clr"
                android:textSize="20sp" />
          </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:drawableLeft="@drawable/ic_chart_column_solid"
android:drawablePadding="5dp"
                android:drawableTint="@color/grey_60"

                android:text="Preperation Analytics"
                android:textSize="18sp" />

          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />

          </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:drawableLeft="@drawable/ic_newspaper_solid"
android:drawablePadding="5dp"
                android:drawableTint="@color/grey_60"

                android:text="Current Affairs"
                android:textSize="18sp" />
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />

          </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:drawableLeft="@drawable/ic_chalkboard_user_solid"
                android:text="Doubt Clearing session"
              android:drawablePadding="5dp"
                android:drawableTint="@color/grey_60"

                android:textSize="18sp" />

          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_circle_check_solid"
              android:drawableTint="@color/dde_btn_clr"
              android:textSize="20sp" />

          </LinearLayout>   



    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>
