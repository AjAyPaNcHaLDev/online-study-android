<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">
         <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item Title"
            android:drawableLeft="@drawable/ic_file_lines_solid"
            android:drawableTint="@color/dde_btn_clr"
            android:textColor="@color/dde_btn_clr"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
         />


        <ImageButton
            android:id="@+id/bt_expand"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_expand_arrow"
            app:tint="@color/dde_btn_clr" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_3"
        android:orientation="vertical"
        android:visibility="visible">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_file_lines_solid"
        android:drawableTint="@color/dde_btn_clr"
        android:textColor="@color/dde_btn_clr"
        android:drawablePadding="10dp"
        android:layout_marginLeft="15dp"
        android:text="Subject : Maths"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_circle_24"
            android:drawableTint="@android:color/black"
            android:textColor="@color/dde_btn_clr"
            android:drawablePadding="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"
            android:text="Set Theory"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_circle_24"
            android:drawableTint="@android:color/black"
            android:textColor="@color/dde_btn_clr"
            android:drawablePadding="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"
            android:text="Relations and Functions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_circle_24"
            android:drawableTint="@android:color/black"
            android:textColor="@color/dde_btn_clr"
            android:drawablePadding="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"
            android:text="Trigonometry"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_circle_24"
            android:drawableTint="@android:color/black"
            android:textColor="@color/dde_btn_clr"
            android:drawablePadding="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"
            android:text="Inverse Trigonometry"/>

    </LinearLayout>


</LinearLayout>


    </LinearLayout>

</LinearLayout>